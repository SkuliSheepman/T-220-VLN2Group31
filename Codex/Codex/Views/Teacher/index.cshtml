@model Codex.Models.Teacher.ViewModels.TeacherViewModel
@{
    ViewBag.Title = "Inbox";
    ViewBag.UserName = "Teacher";
}

<!-- Date Filter -->
<div class="section">
    <div id="dateFilter" class="row">
        <div id="dateYear" class="input-field col s6">
            <select>
                @foreach (var year in Model.TeacherYearsActive)
                {
                    <option value=@year>@year</option>
                }
            </select>
            <label>Select Year</label>
        </div>
        <div id="dateSemester" class="input-field col s6">
            <select>
                <option value="1">Spring</option>
                <option value="2">Summer</option>
                <option value="3">Autumn</option>
            </select>
            <label>Select Semester</label>
        </div>
    </div>
</div>

<!-- Course Selection -->
<div class="section">
    <div class="row">
        <div class="col s2">
            <a class="waves-effect waves-light btn">Vefforritun</a>
        </div>
    </div>
</div>