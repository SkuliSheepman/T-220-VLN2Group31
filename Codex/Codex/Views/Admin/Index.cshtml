@model Codex.Models.UserViewModel
@{
    ViewBag.Title = "Admin";
    ViewBag.UserName = "Admin Man";
}

<div class="row">
    <div class="col s12 l6 offset-l3">
        <ul class="tabs">
            <li class="tab col s6">
                <a href="#">Users</a>
            </li>
            <li class="tab col s6">
                <a href="#">Courses</a>
            </li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="s12">
        <ul class="collapsible popout" data-collapsible="accordion">
            <li class="collapsible-level1">
                <div class="collapsible-header">
                    <i class="material-icons">account_box</i> User 1
                </div>
                <div class="collapsible-body">
                    <div class="card-panel collapsible-body-container">

                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
        <i class="large material-icons">mode_edit</i>
    </a>
    <ul>
        <li>
            <a class="btn-floating red tooltipped" data-position="left" data-delay="50" data-tooltip="Delete selected users">
                <i class="material-icons">delete</i>
            </a>
        </li>
        <li>
            <a class="modal-trigger btn-floating green tooltipped" href="#new-user-modal" data-position="left" data-delay="50" data-tooltip="New user">
                <i class="material-icons">person_add</i>
            </a>
        </li>
        <li>
            <a class="btn-floating blue tooltipped" data-position="left" data-delay="50" data-tooltip="New course">
                <i class="material-icons">book</i>
            </a>
        </li>
    </ul>
</div>

<div id="new-user-modal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>New User</h4>
        <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
</div>