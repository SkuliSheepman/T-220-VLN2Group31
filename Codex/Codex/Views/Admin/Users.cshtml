@model Codex.Models.AdminModels.AdminViewModels.UserViewModel
@{
    ViewBag.Title = "Admin - Users";
    ViewBag.UserName = "Admin Man";
}

<div class="row">
    <div class="col s6 l3 offset-l3">
        @Html.ActionLink("Users", "Users", "Admin", null, new {@class = "waves-effect waves-light btn-flat fill-width center-align"})
    </div>
    <div class="col s6 l3">
        @Html.ActionLink("Courses", "Courses", "Admin", null, new {@class = "waves-effect waves-light btn fill-width center-align"})
    </div>
</div>

<div class="row">
    <div class="s12">
        <ul class="collapsible popout" data-collapsible="accordion">
            @foreach (var user in Model.Users) {
                <li class="grey lighten-2">
                    <div class="collapsible-header">
                        <div class="row clear-margin">
                            <div class="col s3 truncate">
                                <input type="checkbox" id="@user.Id" value="@user.Id" name="user-row"/>
                                <label for="@user.Id">
                                    <span class="transparent-text">.</span>
                                </label>
                                <span>@user.FullName</span>
                            </div>

                            <div class="col s3 truncate">
                                <span class="grey-text">@user.Email</span>
                            </div>

                            <!-- Vertical ellipsis dropdown menu -->
                            <div class="right">
                                <a href="#" class="dropdown-button" data-alignment="right" data-activates="@user.Id-dropdown">
                                    <i class="material-icons">more_vert</i>
                                </a>
                            </div>

                        </div>
                    </div>
                    <div class="collapsible-body">
                        <div class="card-panel collapsible-body-container">

                        </div>
                    </div>

                    <!-- Dropdown content -->
                    <ul id="@user.Id-dropdown" class='dropdown-content'>
                        <li>
                            <a class="waves-effect waves-light modal-trigger" href="#@user.Id-change-password">
                                Change Password
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a class="waves-effect waves-light modal-trigger" href="#@user.Id-delete">
                                Delete
                            </a>
                        </li>
                    </ul>

                    <!-- Modal - Change password -->
                    <div id="@user.Id-change-password" class="modal">
                        <div class="modal-content">
                            <h4 class="center-align">Change Password</h4>
                            <div class="divider"></div>
                            <h5>Change password for @user.FullName</h5>
                            <form class="row">
                                <div class="input-field col s6">
                                    <input id="@user.Id-new-password" type="password" class="validate">
                                    <label for="@user.Id-new-password">New Password</label>
                                </div>
                                <div class="input-field col s6">
                                    <input id="@user.Id-repeat-password" type="password" class="validate">
                                    <label for="@user.Id-repeat-password">Repeat new password</label>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Change Password</a>
                            <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
                        </div>
                    </div>

                    <!-- Modal - Delete -->
                    <div id="@user.Id-delete" class="modal">
                        <div class="modal-content">
                            <h4 class="center-align">Delete User</h4>
                            <div class="divider"></div>
                            <p>Are you sure you want to delete @user.FullName?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Delete User</a>
                            <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large red">
        <i class="large material-icons">mode_edit</i>
    </a>
    <ul>
        <li>
            <a id="delete-selected-users" class="btn-floating red tooltipped" data-position="left" data-delay="50" data-tooltip="Delete selected users">
                <i class="material-icons">delete</i>
            </a>
        </li>
        <li>
            <a class="modal-trigger btn-floating green tooltipped" href="#new-user-modal" data-position="left" data-delay="50" data-tooltip="New user">
                <i class="material-icons">person_add</i>
            </a>
        </li>
    </ul>
</div>

<div id="new-user-modal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4 class="center-align">New User</h4>
        <div class="divider"></div>

        @using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post, new {@id = "create-user-form", role = "form"})) {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    @Html.TextBoxFor(m => m.NewUserModel.Name, new {@class = "validate"})
                    @Html.ValidationMessageFor(m => m.NewUserModel.Name, "", new {@class = "text-danger"})
                    @Html.LabelFor(m => m.NewUserModel.Name)
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    @Html.TextBoxFor(m => m.NewUserModel.Email, new {@class = "validate"})
                    @Html.ValidationMessageFor(m => m.NewUserModel.Email, "", new {@class = "text-danger"})
                    @Html.LabelFor(m => m.NewUserModel.Email)
                </div>
            </div>

            <p>Default username and password is the email</p>

            <div class="row">
                <div class="col s12">
                    @Html.CheckBoxFor(m => m.NewUserModel.Admin, new {@class = "validate"})
                    @Html.LabelFor(m => m.NewUserModel.Admin)
                </div>
            </div>

            <div class="divider"></div>

            <h5>Courses</h5>
        }

    </div>
    <div class="modal-footer">
        <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
        <a href="#" id="create-user-button" class="waves-effect waves-green btn-flat">Create</a>
    </div>
</div>