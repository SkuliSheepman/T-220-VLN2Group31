@using Codex.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "card-panel col s12 m8 offset-m2 l6 offset-l3", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12 center-align">
            <h2>@ViewBag.Title</h2>
            <div class="divider"></div>
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="row">
        <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Email)
        </div>
    </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">vpn_key</i>
                        @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Password)
                    </div>
                </div>
