                        </div>
                    </div>
                *@
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <button class="btn waves-effect waves-light fill-width" type="submit" name="action">
                            Login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
}


